<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="config">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="layouts" type="layoutsDeclaration" minOccurs="1" maxOccurs="unbounded">
                    <xs:unique name="uniqueLayoutId">
                        <xs:annotation>
                            <xs:documentation>
                                Layout id must be unique.
                            </xs:documentation>
                        </xs:annotation>
                        <xs:selector xpath="layout" />
                        <xs:field xpath="@id" />
                    </xs:unique>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
        <xs:unique name="uniqueLayoutsId">
            <xs:annotation>
                <xs:documentation>
                    Layouts id must be unique.
                </xs:documentation>
            </xs:annotation>
            <xs:selector xpath="layouts" />
            <xs:field xpath="@id" />
        </xs:unique>
    </xs:element>

    <xs:complexType name="layoutsDeclaration">
        <xs:annotation>
            <xs:documentation>
                Layouts declaration.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="layout" type="layoutDeclaration" minOccurs="1" maxOccurs="unbounded" />
        </xs:sequence>
        <xs:attribute name="id" type="xs:string" use="required" />
        <xs:attribute name="label" type="xs:string" use="optional" />
    </xs:complexType>

    <xs:complexType name="layoutDeclaration">
        <xs:annotation>
            <xs:documentation>
                Layout declaration.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="column" type="columnDeclaration" minOccurs="0" maxOccurs="unbounded" />
        </xs:sequence>
        <xs:attribute name="id" type="xs:string" use="required" />
        <xs:attribute name="label" type="xs:string" use="optional" />
    </xs:complexType>
    
    <xs:complexType name="columnDeclaration">
        <xs:annotation>
            <xs:documentation>
                Column declaration.
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="id" type="xs:string" use="required" />
        <xs:attribute name="class" type="xs:string" use="required" />
        <xs:attribute name="width" type="xs:string" use="optional" />
        <xs:attribute name="float" type="xs:string" use="optional" />
    </xs:complexType>
    
</xs:schema>
