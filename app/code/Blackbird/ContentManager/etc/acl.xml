<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Blackbird_ContentManager::settings" title="Settings">
                        <resource id="Blackbird_ContentManager::contenttype" title="Content Type">
                            <resource id="Blackbird_ContentManager::contenttype_save" title="Save Content Type" />
                            <resource id="Blackbird_ContentManager::contenttype_delete" title="Delete Content Type" />
                        </resource>
                        <resource id="Blackbird_ContentManager::contentlist" title="Content Lists">
                            <resource id="Blackbird_ContentManager::contentlist_save" title="Save Content List" />
                            <resource id="Blackbird_ContentManager::contentlist_delete" title="Delete Content List" />
                        </resource>
                        <resource id="Blackbird_ContentManager::flag" title="Store Flags" />
                    </resource>
                    <resource id="Blackbird_ContentManager::contents" title="Contents">
                        <resource id="Blackbird_ContentManager::content_save" title="Save Content" />
                        <resource id="Blackbird_ContentManager::content_delete" title="Delete Content" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
