<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="itoris_extensions" translate="label" sortOrder="101">
            <label>ITORIS Extensions</label>
        </tab>
        <section id="itoris_dynamicproductoptions" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Dynamic Product Options</label>
            <tab>itoris_extensions</tab>
            <resource>Itoris_DynamicProductOptions::config_dpo</resource>
            <group id="general" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Extension Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
			<group id="export_import" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
				<label>Export / Import</label>
				<frontend_model>Itoris\DynamicProductOptions\Block\System\ExportImport</frontend_model>				
			</group>
        </section>
	</system>
</config>