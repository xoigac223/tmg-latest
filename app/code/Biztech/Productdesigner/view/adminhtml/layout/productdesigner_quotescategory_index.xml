<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Biztech\Productdesigner\Block\Adminhtml\Quotescategory" name="adminhtml.block.promo.quote.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.promo.quote.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">productdesigner_quotescategory_grid</argument>
                        <argument name="dataSource" xsi:type="object">Biztech\Productdesigner\Model\Mysql4\Quotescategory\Collection</argument>
                        <argument name="default_sort" xsi:type="string">sort_order</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" 
                          as="grid.massaction">
                        <arguments>
                            <argument name="massaction_id_field" xsi:type="string">category Id</argument>
                            <argument name="form_field_name" xsi:type="string">category</argument>
                            <argument name="options" xsi:type="array">
                                <item name="delete" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">
                                        Delete
                                    </item>
                                    <item name="url" xsi:type="string">productdesigner/quotescategory/massdelete</item>
                                    <item name="confirm" xsi:type="string" translate="true">
                                        Are you sure you want to delete?
                                    </item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.promo.quote.grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">productdesigner/quotescategory/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="id" xsi:type="string">getId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">quotescategory_id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Name</argument>
                                <argument name="index" xsi:type="string">category_title</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="root_category">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Is Root category?</argument>
                                <argument name="index" xsi:type="string">is_root_category</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Biztech\Productdesigner\Model\System\Config\Rootcategory"/>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="status">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">status</argument>
                                <argument name="index" xsi:type="string">status</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Biztech\Productdesigner\Model\System\Config\Status"/>
                            </arguments>
                        </block>
                       
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
