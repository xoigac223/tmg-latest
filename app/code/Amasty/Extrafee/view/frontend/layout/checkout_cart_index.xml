<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="cart.summary">
            <block ifconfig="amasty_extrafee/frontend/cart" class="Amasty\Extrafee\Block\Cart\Fee\Options" name="amasty.extrafee.options" template="cart/fee/options.phtml" before="checkout.cart.shipping">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="block-amasty-extrafee-summary" xsi:type="array">
                                <item name="component" xsi:type="string">uiComponent</item>
                                <item name="children" xsi:type="array">
                                    <item name="block-amasty-extrafee" xsi:type="array">
                                        <item name="component" xsi:type="string">Amasty_Extrafee/js/view/checkout/cart/block</item>
                                        <item name="provider" xsi:type="string">amastyExtrafeeProvider</item>
                                        <item name="sortOrder" xsi:type="string">5</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Amasty_Extrafee/checkout/cart/block</item>
                                        </item>
                                        <item name="children" xsi:type="array">
                                            <item name="amasty-extrafee-fieldsets" xsi:type="array">
                                                <item name="component" xsi:type="string">Amasty_Extrafee/js/view/checkout/cart/fieldset</item>
                                                <item name="displayArea" xsi:type="string">amasty-extrafee-fieldsets</item>
                                                <item name="children" xsi:type="array"></item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="amasty_extrafee" xsi:type="array">
                                    <item name="component"  xsi:type="string">Amasty_Extrafee/js/view/checkout/cart/totals/fee</item>
                                    <item name="sortOrder" xsi:type="string">50</item>
                                    <item name="label" xsi:type="string" translate="true">Extra Fee</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>