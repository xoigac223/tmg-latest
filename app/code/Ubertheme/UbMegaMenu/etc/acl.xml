<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Ubertheme_UbMegaMenu::ubmegamenu_content" title="UB Mega Menu" sortOrder="11" >
                        <resource id="Ubertheme_UbMegaMenu::group" title="Manage Menu" sortOrder="1">
                            <resource id="Ubertheme_UbMegaMenu::group_save" title="Save Menu" sortOrder="1" />
                            <resource id="Ubertheme_UbMegaMenu::group_delete" title="Delete Menu" sortOrder="2" />
                            <resource id="Ubertheme_UbMegaMenu::group_duplicate" title="Duplicate Menu" sortOrder="3" />
                        </resource>
                        <resource id="Ubertheme_UbMegaMenu::item" title="Manage Menu Items" sortOrder="2">
                            <resource id="Ubertheme_UbMegaMenu::item_save" title="Save Menu Item" sortOrder="1" />
                            <resource id="Ubertheme_UbMegaMenu::item_delete" title="Delete Menu Item" sortOrder="2" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <!-- this resource id we can use in system.xml for section -->
                            <resource id="Ubertheme_UbMegaMenu::settings" title="UbMegaMenu Section" sortOrder="2" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>